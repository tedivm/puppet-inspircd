
<config format="xml">

<server
        name="penguin.omega.example.org"
        description="Waddle World"
        network="Omega">


<admin
       name="Johnny English"
       nick="MI5"
       email="MI5@the.best.secret.agent">


<bind
      address=""
      port="6697"
      type="clients"
      ssl="gnutls"
>

<bind address="" port="6660-6669" type="clients">
<bind address="" port="7000,7001" type="servers">
<bind address="1.2.3.4" port="7005" type="servers" ssl="openssl">

<power
       #hash="sha256"
       diepass=""
       restartpass="">

<connect deny="192.0.2.*">

<connect deny="3ffe::0/32" reason="The 6bone address space is deprecated">

<connect
         name="secret"
         parent="main"
         allow="203.0.113.*"
         hash="sha256"
         password="secret"

         maxchans="30"
         timeout="10"
         localmax="3"
         globalmax="3"
         maxconnwarn="off"
         #usednsbl="yes"
         useident="no"
         limit="5000"
         modes="+x"

         # requireident, requiressl, requireaccount: require that users of this
         requiressl="on"
         # specified using <files secretmotd="filename"> or <execfiles ...>
         motd="secretmotd"
         allowmotdcolors="false"

         # port: What port this user is allowed to connect on. (optional)
         # The port MUST be set to listen in the bind blocks above.
         port="6697">

<connect
         name="main"
         allow="*"
         #maxchans="30"
         timeout="10"
         pingfreq="120"
         hardsendq="1M"
         softsendq="8192"
         recvq="8K"
         threshold="10"
         commandrate="1000"
         fakelag="on"
         localmax="3"
         globalmax="3"
         useident="no"
         limit="5000"
         modes="+x">


<cidr
      ipv4clone="32"
      ipv6clone="128">


# This file has all the information about oper classes, types and o:lines.
# You *MUST* edit it.
<include file="conf/examples/opers.conf.example">

# This file has all the information about server links and ulined servers.
# You *MUST* edit it if you intend to link servers.
<include file="conf/examples/links.conf.example">



<files motd="conf/examples/motd.txt.example" rules="conf/examples/rules.txt.example">

# Example of an executable file include. Note this will be read on rehash,
# not when the command is run.
#<execfiles rules="wget -O - http://www.example.com/rules.txt">




<channels
          users="20"
          opers="60">

#-#-#-#-#-#-#-#-#-#-#-#-#-#-# DNS SERVER -#-#-#-#-#-#-#-#-#-#-#-#-#-#-#
